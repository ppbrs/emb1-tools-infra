{
	"version": "2.0.0",
	"tasks": [
		// ---------------------------------------------------------------------------------
		// BASH
		// ---------------------------------------------------------------------------------
		{
			"label": "bash: script: Run in Integrated Terminal.",
			"type": "shell",
			"group": "build",
			"options": {
				"cwd": "${fileDirname}",
			},
			"command": "clear; date; echo; ${file}",
		},
		{
			"label": "bash: script: Make executable.",
			"type": "shell",
			"group": "build",
			"options": {
				"cwd": "${fileDirname}",
			},
			"command": "clear; date; echo; chmod +x ${file}",
		},
	]
}